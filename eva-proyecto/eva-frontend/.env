# ========================================
# CONFIGURACIÓN DEL FRONTEND EVA REACT
# ========================================

# URL base de la API del backend Laravel
VITE_API_BASE_URL=http://localhost:8000
VITE_API_URL=http://localhost:8000/api

# Configuración de autenticación
VITE_SANCTUM_STATEFUL_DOMAINS=localhost:5173,127.0.0.1:5173
VITE_SESSION_DOMAIN=localhost

# URLs específicas del sistema EVA
VITE_AUTH_LOGIN_URL=/auth/login
VITE_AUTH_LOGOUT_URL=/auth/logout
VITE_AUTH_REGISTER_URL=/auth/register
VITE_AUTH_USER_URL=/auth/user

# Endpoints principales del sistema EVA
VITE_EQUIPOS_URL=/equipos
VITE_MANTENIMIENTO_URL=/mantenimiento
VITE_CALIBRACION_URL=/calibracion
VITE_CONTINGENCIAS_URL=/contingencias
VITE_DASHBOARD_URL=/dashboard
VITE_ARCHIVOS_URL=/archivos

# Configuración de desarrollo
VITE_APP_NAME="gestionthuv"
VITE_APP_ENV=development
VITE_APP_DEBUG=true

# Configuración de archivos y uploads
VITE_MAX_FILE_SIZE=10485760
VITE_ALLOWED_FILE_TYPES=pdf,doc,docx,xls,xlsx,jpg,jpeg,png,gif

# Configuración de paginación
VITE_DEFAULT_PAGE_SIZE=15
VITE_MAX_PAGE_SIZE=100

# URLs de exportación
VITE_EXPORT_EQUIPOS_URL=/export/equipos
VITE_EXPORT_MANTENIMIENTO_URL=/export/mantenimiento
VITE_EXPORT_DASHBOARD_URL=/export/dashboard

# Configuración de timeouts y reintentos
VITE_REQUEST_TIMEOUT=30000
VITE_RETRY_ATTEMPTS=3
VITE_RETRY_DELAY=1000

# Configuración de notificaciones
VITE_NOTIFICATIONS_ENABLED=true
VITE_TOAST_DURATION=5000

# Configuración de WebSocket (para notificaciones en tiempo real)
VITE_WEBSOCKET_ENABLED=false
VITE_WEBSOCKET_URL=ws://localhost:6001

# Configuración de caché
VITE_CACHE_ENABLED=true
VITE_CACHE_TTL=300000

# Configuración de tema
VITE_DEFAULT_THEME=light
VITE_THEME_STORAGE_KEY=eva_theme_preference
